#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

shopt -s dotglob    # enables commands like 'mv *' to see hidden files
set -e              # exit immediately if any command fails (non-zero status)

# buildpack debug output
pwd
ls -la

# create local variables pointing to key paths
app_files_dir=$1
cache_dir=$2
buildpack_dir=$(cd $(dirname $0) && cd .. && pwd)

# buildpack debug output
echo $app_files_dir
echo $cache_dir
echo $buildpack_dir
env

# download and configure required software ...
mkdir -p $cache_dir
cd $cache_dir
wget http://10.100.87.149/software/cjedtest/jdk-7u67-linux-x64.tar.gz > stuff.log
wget http://10.100.87.149/software/cjedtest/apache-karaf-3.0.3.tar.gz >> stuff.log
tar xzf apache-karaf-3.0.3.tar.gz >> stuff.log
tar xzf jdk-7u67-linux-x64.tar.gz >> stuff.log

# remove versions from directories
mv $cache_dir/apache-karaf-3.0.3 $cache_dir/apache-karaf
mv $cache_dir/jdk1.7.0_67 $cache_dir/jdk

# put everything in place for droplet creation
mv $buildpack_dir/bin/launch.sh $app_files_dir/
mv $cache_dir/apache-karaf $app_files_dir/
mv $cache_dir/jdk $app_files_dir/

# remove stuff left in the cache
rm -f $cache_dir/*.tar.gz

cd $app_files_dir
echo "List of files in the app_file_dir"
ls -la
echo "List of files in the jdk dir"
ls -la jdk
echo "List of files in the Karaf dir"
ls -la apache-karaf
